<%- include("header"); -%>

    <section class="container">
        <div class="left">
            <div class="header">
                <p class="app-name">TODO LIST</p>
            </div>

            <div class="time-section">
                <div class="date mx">
                    <%= cDay %>
                </div>
                <div class="time mx">
                    <%= time %>
                </div>
            </div>
            <div class="list-names">
                <p class="list-item">
                    <%= listTitle %>
                </p>
                <!-- <p class="list-item">Second TODO list</p> -->
            </div>
            <div class="new-listitem-form">

            </div>
        </div>
        <div class="right">
            <div class="top-instruction">
                <div class="list">
                    <%= listTitle %>
                </div>
                <div class="time-stamp">
                    <%= cDay %>
                </div>
            </div>
            <div class="body">
                <ul>

                    <% newListItem.forEach((list)=> { %>
                        <form class="check-form" action="/delete" method="post">
                            <li><input type="checkbox" name="checkbox" value="<%=list._id%>" class="check-box"
                                    onchange="this.form.submit()">
                                <p>
                                    <%= list.name %>
                                </p>
                            </li>
                            <input type="hidden" name="listname" value="<%= listTitle %>"></input>
                        </form>
                        <% }) %>


                </ul>
            </div>
            <div class="list-form">
                <form action="/" method="post" class="form">
                    <input type="text" name="task" id="tasks" class="task-add" autocomplete="off">
                    <button type="submit" value="<%= listTitle %>" name="listname">add</button>
                </form>
            </div>
        </div>
    </section>

